@model IEnumerable<EcommercialWebApplication.Models.Coupon>

@{
    ViewData["Title"] = "Index";
}

<h1 class="big-title">Coupon</h1>

<p>
    <a class="link-custom" asp-action="Create">Create a new coupon</a>
</p>
<div style="overflow-x:auto;">
    <table class="table">
        <thead>
            <tr class="table-title-center">
                <th>
                    @Html.DisplayNameFor(model => model.Code)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Count)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Discount)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.EndDate)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Description)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Type)
                </th>
                <th></th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr class="table-product-center">
                    <td>
                        @Html.DisplayFor(modelItem => item.Code)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Count)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Discount)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.EndDate)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Description)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Type)
                    </td>
                    <td>
                        <a class="category-link" asp-action="Edit" asp-route-id="@item.Id">Edit</a> |
                        <a class="category-link" asp-action="Details" asp-route-id="@item.Id">Details</a> |
                        <a class="category-link" asp-action="Delete" asp-route-id="@item.Id">Delete</a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>
