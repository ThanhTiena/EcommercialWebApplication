@model EcommercialWebApplication.Models.Coupon

@{
    ViewData["Title"] = "Edit";
}

<h1 class="big-title">Edit</h1>

<h4 class="small-title">Coupon</h4>
<hr />
<div class="row">
    <div class="col-md-6 form-content-center">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="Id" />
            <div class="form-group list-item">
                <label asp-for="Code" class="control-label"></label>
                <input asp-for="Code" class="form-control" />
                <span asp-validation-for="Code" class="text-danger"></span>
            </div>
            <div class="form-group list-item">
                <label asp-for="Count" class="control-label"></label>
                <input asp-for="Count" class="form-control" min=1 max=1000 />
                <span asp-validation-for="Count" class="text-danger"></span>
            </div>
            <div class="form-group list-item">
                <label asp-for="Discount" class="control-label"></label>
                <input asp-for="Discount" class="form-control" max=100 min=1 step=1 />
                <span asp-validation-for="Discount" class="text-danger"></span>
            </div>
            <div class="form-group list-item">
                <label asp-for="EndDate" class="control-label"></label>
                <input asp-for="EndDate" class="form-control" />
                <span asp-validation-for="EndDate" class="text-danger"></span>
            </div>
            <div class="form-group list-item">
                <label asp-for="Description" class="control-label"></label>
                <input asp-for="Description" class="form-control" />
                <span asp-validation-for="Description" class="text-danger"></span>
            </div>
            <div class="form-group list-item">
                <label asp-for="Type" class="control-label"></label>
                <select asp-for="Type" class="form-control" asp-items="Html.GetEnumSelectList<CouponType>()">
                    <option>Select type ...</option>
                </select>
                <span asp-validation-for="Type" class="text-danger"></span>
            </div>
            <div class="form-group list-item">
                <input type="submit" value="Save" class="btn btn-info btn-edit" />
            </div>
        </form>
    </div>
</div>

<div>
    <a class="category-link" asp-action="Index">Back to List</a>
</div>

