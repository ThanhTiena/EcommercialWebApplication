@using EcommercialWebApplication.Models;
@model IEnumerable<Product>;

@{
    ViewData["Title"] = "Home Page";
}
<div id="carouselExampleIndicators" class="carousel slide" data-ride="carousel">
    <ol class="carousel-indicators">
        <li data-target="#carouselExampleIndicators" data-slide-to="0" class="active"></li>
        <li data-target="#carouselExampleIndicators" data-slide-to="1"></li>
        <li data-target="#carouselExampleIndicators" data-slide-to="2"></li>
    </ol>
    <div class="carousel-inner">
        <div class="carousel-item active">
            <img class="d-block w-100" src="~/images/carosel_1.png" alt="First slide">
        </div>
        <div class="carousel-item">
            <img class="d-block w-100" src="~/images/carosel_2.png" alt="Second slide">
        </div>
        <div class="carousel-item">
            <img class="d-block w-100" src="~/images/carosel_3.png" alt="Third slide">
        </div>
    </div>
    <a class="carousel-control-prev" href="#carouselExampleIndicators" role="button" data-slide="prev">
        <span class="carousel-control-prev-icon" aria-hidden="true"></span>
        <span class="sr-only">Previous</span>
    </a>
    <a class="carousel-control-next" href="#carouselExampleIndicators" role="button" data-slide="next">
        <span class="carousel-control-next-icon" aria-hidden="true"></span>
        <span class="sr-only">Next</span>
    </a>
</div>
<div class="categories_list">
    <div class="row">
        @foreach (var category in ViewBag.Categories)
        {
            <div class="col-2 ">
                <div class="card">
                    <div class="card-body category_card">
                        <h5 class="card-title text-center">@category.CategoryName</h5>
                    </div>
                </div>
            </div>

        }
    </div>
</div>


<div class="row" style="margin-bottom:50px;">
    <img src="~/images/banner.png" alt="banner" />
</div>
<div class="row">
    @foreach (var product in Model)
    {
        <div class="col-2 product_card">
            <div class="card mb-4">
                <div class="card-header">
                    <img src="~/@product.Image" alt="@product.Name Image" class="card-img-top" style="height:100px;width:100px" />
                </div>
                <div class="card-body">
                    <h6 class="my-0">
                        <label style="font-size:14px;">@product.Name</label>
                    </h6>
                    <div class="d-flex justify-content-between align-items-center">
                        <div class="btn-group">
                            <label style="font-size:16px; color:red;">
                                <b>$ @product.Price</b>
                            </label>
                            <a asp-action="Detail" asp-controller="Home" asp-route-id="@product.Id" class="btn btn-success">Details</a>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    }
</div>
