@using EcommercialWebApplication.Models;
@model IEnumerable<Product>;

@{
    ViewData["Title"] = "Home Page";
}
<div id="carouselIndicators" class="carousel slide" data-bs-ride="carousel">
    <div class="carousel-indicators">
        <button type="button" data-bs-target="#carouselIndicators" data-bs-slide-to="0" class="active" aria-current="true" aria-label="Slide 1"></button>
        <button type="button" data-bs-target="#carouselIndicators" data-bs-slide-to="1" aria-label="Slide 2"></button>
        <button type="button" data-bs-target="#carouselIndicators" data-bs-slide-to="2" aria-label="Slide 3"></button>
    </div>
    <div class="carousel-inner">
        <div class="carousel-item active">
            <img src="~/images/carosel_1.png" class="d-block w-100" alt="carousel1">
        </div>
        <div class="carousel-item">
            <img src="~/images/carosel_2.png" class="d-block w-100" alt="carousel2">
        </div>
        <div class="carousel-item">
            <img src="~/images/carosel_3.png" class="d-block w-100" alt="carousel3">
        </div>
    </div>
    <button class="carousel-control-prev" type="button" data-bs-target="#carouselIndicators" data-bs-slide="prev">
        <span class="carousel-control-prev-icon" aria-hidden="true"></span>
        <span class="visually-hidden">Previous</span>
    </button>
    <button class="carousel-control-next" type="button" data-bs-target="#carouselIndicators" data-bs-slide="next">
        <span class="carousel-control-next-icon" aria-hidden="true"></span>
        <span class="visually-hidden">Next</span>
    </button>
</div>
<div class="categories_list">
    <h2>Categories</h2>
    <div class="row">
        <div class="col-md-2 col-6">
                <div class="card" >
                    <div class="card-body category_card">
                        <a asp-action="SearchByCategory" asp-route-id="0" class="card-title text-center">All Categories</a>
                    </div>
                </div>
            </div>
        @foreach (var category in ViewBag.Categories)
        {
            <div class="col-md-2 col-6">
                <div class="card" >
                    <div class="card-body category_card">
                        <a asp-action="SearchByCategory" asp-route-id="@category.Id" class="card-title text-center">@category.CategoryName</a>
                    </div>
                </div>
            </div>

        }
    </div>
</div>

<div class="container">
    <div class="row" style="margin-bottom:50px;">
        <img src="~/images/banner.png" alt="banner" />
    </div>
</div>

<div class="row product-list">
    <h2>Products</h2>
    @foreach (var product in Model)
    {
        <div class="col-md-2 col-6 product_card">
            <div class="card mb-4">
                <div class="card-header">
                    <img src="~/@product.Image" alt="@product.Name Image" class="card-img-top" style="height:100px;width:100px" />
                </div>
                <div class="card-body">
                    <h5 class="my-0">
                        <label>@product.Name</label>
                    </h5>
                    <div class="align-items-center" style="text-align:center;margin-bottom: 5px;">
                        <label style="font-size:24px; color:red;">
                            <b>$ @product.Price</b>
                        </label>
                    </div>
                    <div class="btn-group">
                        <a asp-action="Detail" asp-controller="Home" asp-route-id="@product.Id" class="btn btn-success">Details</a>
                    </div>
                </div>
            </div>
        </div>
    }
</div>
<div>
</div>
