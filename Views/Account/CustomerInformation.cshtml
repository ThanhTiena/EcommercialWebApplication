@model Profile
@{
    ViewData["Title"] = "Customer Information";
}

<h1>@ViewData["Title"]</h1>

<div class="row">
    <div class="col-md-4">
        <form id="registerForm" method="post" asp-action="CustomerInformation">
            <h2>Create a new account.</h2>
            <hr />
            <span class="alert-danger">@ViewData["Error"]</span>
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-floating">
                <input asp-for="@Model.FirstName" class="form-control" aria-required="true" />
                <label asp-for="@Model.FirstName"></label>
                <span asp-validation-for="@Model.FirstName" class="text-danger"></span>
            </div>
            <div class="form-floating">
                <input asp-for="@Model.LastName" type="text" id="register-password" class="form-control" autocomplete="new-password" aria-required="true" />
                <label asp-for="@Model.LastName"></label>
                <span asp-validation-for="@Model.LastName" class="text-danger"></span>
            </div>
            <div class="form-floating">
                <input asp-for="@Model.Dob" type="date"  class="form-control" autocomplete="new-password" aria-required="true" />
                <label asp-for="@Model.Dob"></label>
                <span asp-validation-for="@Model.Dob" class="text-danger"></span>
            </div>
            <div class="form-floating">
                <input asp-for="@Model.Address" type="date"  class="form-control" autocomplete="new-password" aria-required="true" />
                <label asp-for="@Model.Address"></label>
                <span asp-validation-for="@Model.Address" class="text-danger"></span>
            </div>
            <div class="form-floating">
                <input asp-for="@Model.Nationality" type="date"  class="form-control" autocomplete="new-password" aria-required="true" />
                <label asp-for="@Model.Nationality"></label>
                <span asp-validation-for="@Model.Nationality" class="text-danger"></span>
            </div>
            <button id="registerSubmit" type="submit" class="w-100 btn btn-lg btn-primary">Confirm</button>
        </form>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
